{
	"name": "pathcrafter",
	"version": "1.0.11",
	"author": "alexandre-fernandez",
	"description": "Create responsive document relative SVG paths programmatically.",
	"keywords": [
		"pathcrafter",
		"svg",
		"path",
		"dom",
		"fill",
		"stroke",
		"responsive",
		"diagram",
		"line"
	],
	"license": "MIT",
	"homepage": "https://github.com/alexandre-fernandez/pathcrafter",
	"repository": {
		"type": "git",
		"url": "https://github.com/alexandre-fernandez/pathcrafter"
	},
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "ts-patch install -s",
		"build": "tsc --project tsconfig.json && node bin/pre-build.cjs && node bin/build.cjs",
		"patch": "npm version patch",
		"minor": "npm version minor",
		"major": "npm version major",
		"publish": "node bin/pre-publish.cjs && npm publish ; node bin/post-publish.cjs",
		"lint": "eslint --ignore-path .eslintignore ."
	},
	"devDependencies": {
		"@types/node": "^20.1.4",
		"af-prettierrc": "^1.0.0",
		"af-tsconfig": "^1.0.2",
		"esbuild": "^0.17.18",
		"eslint": "^8.40.0",
		"eslint-config-af-typescript": "^1.6.0",
		"ts-patch": "^2.1.0",
		"typescript": "^5.0.4",
		"typescript-transform-paths": "^3.4.6"
	},
	"contributors": [
		{
			"name": "Alexandre Fernandez",
			"url": "https://github.com/alexandre-fernandez"
		}
	]
}

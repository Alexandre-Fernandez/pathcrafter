---
import Layout from "../layouts/Layout.astro"
---

<Layout>
	<section>
		<svg
			width="120"
			height="120"
			viewBox="0 0 120 120"
			xmlns="w3.org/2000/svg"
		>
			<line
				x1="20"
				y1="100"
				x2="100"
				y2="20"
				stroke-width="2"
				stroke="black"></line>
		</svg>

		<svg
			width="120"
			height="120"
			viewBox="0 0 120 120"
			xmlns="w3.org/2000/svg"
		>
			<path
				d="M20 100 L100 20 L120 120"
				stroke-width="2"
				stroke="black"
				fill="none"></path>
		</svg>

		<svg
			class="cubic"
			width="120"
			height="120"
			viewBox="0 0 120 120"
			xmlns="w3.org/2000/svg"
		>
			<path
				d="M20 100 L100 20 C120 0,80 120,120 120"
				stroke-width="2"
				stroke="black"
				fill="none"></path>
		</svg>

		<svg
			class="quadratic"
			width="120"
			height="120"
			viewBox="0 0 120 120"
			xmlns="w3.org/2000/svg"
		>
			<path
				d="M20 100 L100 20 Q30 100,120 120"
				stroke-width="2"
				stroke="black"
				fill="none"></path>
		</svg>

		<!-- <svg
			id="svg"
			width="500"
			height="500"
			viewBox="0 0 500 500"
			xmlns="w3.org/2000/svg"
		>
			 <path
				d="M0 0 L0 10 L10 10"
				stroke-width="2"
				stroke="black"
				fill="none"></path> 
		</svg> -->
	</section>

	<section id="result"></section>

	<section>
		<div class="angle"></div>
		<div class="angle"></div>
		<div class="angle"></div>
		<div class="angle"></div>
		<div class="angle"></div>
		<div class="angle"></div>
		<div class="angle"></div>
	</section>
</Layout>

<script>
	import { Path } from "pathcrafter"

	const path = new Path()
		.start({ x: 0, y: 0 })
		.vertical(1)
		.horizontal(25)
		.cubic({ x: 50, y: 50 }, { x: 50, y: 0 }, { x: -50, y: 0 })
		.horizontal(25)
		.quadratic({ x: 50, y: 50 }, { x: 50, y: 0 })
		.vertical(50)
		.diagonal({ x: 50, y: 50 })
		.diagonal({ x: 50, y: -50 })
		.vertical(-50)

	const svg = document.createElementNS("http://www.w3.org/2000/svg", "svg")
	svg.setAttribute("id", "svg")
	svg.setAttribute("width", "500")
	svg.setAttribute("height", "500")
	svg.setAttribute("viewBox", "0 0 500 500")
	svg.setAttribute("xmlns", "w3.org/2000/svg")
	svg.append(path.toElement())

	document.querySelector("#result")?.append(svg)
</script>

<style>
	#result {
		margin: 2rem 2rem;
	}
	#svg {
		display: block;
		box-shadow: 0 0 0 1px black;
	}
	.angle {
		height: 50px;
		width: 50px;
		margin: 5px;
	}

	.angle:nth-child(1) {
		background: linear-gradient(0deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(2) {
		background: linear-gradient(15deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(3) {
		background: linear-gradient(30deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(4) {
		background: linear-gradient(45deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(5) {
		background: linear-gradient(60deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(6) {
		background: linear-gradient(75deg, darkslategray 50%, orangered 50%);
	}
	.angle:nth-child(7) {
		background: linear-gradient(90deg, darkslategray 50%, orangered 50%);
	}
</style>
